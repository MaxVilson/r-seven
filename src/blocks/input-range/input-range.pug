//- Все примеси в этом файле должны начинаться c имени блока (input-range)

mixin input-range(props)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +input-range('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' input-range--' + modsList[i].trim();
      }
    }

  label.input-range(class=allMods)&attributes(attributes)
    input.input-range__input(type='text')&attributes(props.attrs)