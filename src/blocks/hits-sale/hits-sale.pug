//- Все примеси в этом файле должны начинаться c имени блока (hits-sale)

mixin hits-sale(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +hits-sale('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' hits-sale--' + modsList[i].trim();
      }
    }

  .hits-sale(class=allMods)&attributes(attributes)
    .hits-sale__inner
      .hits-sale__top-line
        h2.hits-sale__title Хиты продаж
        +slider-controls(class='hits-sale__desktop-controls')
      .swiper-container.hits-sale__slider
        .swiper-wrapper.hits-sale__slider-wrapper
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit1.png', 'Наушники игровые Asus ROG Strix Big Bass', '3', '18 850', '14 999 ₽', '-18%')(data-product-id='1')
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit2.png', 'Видеокарта MSI GeForce RTX 2080 Ti VENTUS', '5', '95 999', '80 999 ₽', '-28%')(data-product-id='2')
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit3.png', 'Ультрабук 14’’ HP Pavilion 14-ce0068ur красный', '4', '48 860', '34 999 ₽', '-15%')(data-product-id='3')
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit4.png', 'Мышь проводная A4Tech Bloody Winner T6/T60 черный', '4', '1 899', '1 599 ₽', '-11%')(data-product-id='4')
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit5.png', 'Блок питания Thermaltake ToughPower 1200W', '4', '17 860', '16 999 ₽', '-33%')(data-product-id='5')
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit6.png', 'Кулер для процессора Noctua NH-U12S DX-3647', '3', '10 200', '8 399  ₽', '-42%')(data-product-id='6')
          .swiper-slide.hits-sale__slide.hits-sale__slide--large
            +card-hit('img/hit7.png', 'Игровой монитор 49’’ Samsung QLED C49HG90DMIg', '4', '67 580', '58 499 ₽', '-15%', 'Подарок: портативный SSD Thunderbolt™3 X5 500ГБ', 'large')(data-product-id='7')
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit2.png', 'Видеокарта MSI GeForce RTX 2080 Ti VENTUS', '5', '95 999', '80 999 ₽', '-28%')(data-product-id='8')
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit3.png', 'Ультрабук 14’’ HP Pavilion 14-ce0068ur красный', '4', '48 860', '34 999 ₽', '-15%')(data-product-id='9')
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit4.png', 'Мышь проводная A4Tech Bloody Winner T6/T60 черный', '4', '1 899', '1 599 ₽', '-11%')(data-product-id='10')
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit5.png', 'Блок питания Thermaltake ToughPower 1200W', '4', '17 860', '16 999 ₽', '-33%')(data-product-id='11')
          .swiper-slide.hits-sale__slide
            +card-hit('img/hit6.png', 'Кулер для процессора Noctua NH-U12S DX-3647', '3', '10 200', '8 399  ₽', '-42%')(data-product-id='12')
